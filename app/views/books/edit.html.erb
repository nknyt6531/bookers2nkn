<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
        <label>Title</label>
        <div class="form-group">
          <%= f.text_field :title %>
        </div>
        <label>Opinion</label>
        <div class="form-group">
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
